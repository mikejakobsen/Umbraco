@model AarhusWebDev.ViewModels.ContactForm
@{
    Layout = null;
}

<!-- https://docs.google.com/document/d/1TAITyzSZ5PydrY8fwkDZ-0syDXqxBbOJUHzW9DE8mVM/edit -->

@if (TempData["success"] == null)
{
    using (Html.BeginUmbracoForm("HandleFormSubmit", "ContactFormSurface", new object(), new {@class = "form-horizontal"}))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new {@class = "pull-left form-label"}) <i class="glyphicon glyphicon-user"></i>
            @Html.TextBoxFor(m => m.Name, new {@class = "form-control", placeholder = "Name"})
            @Html.ValidationMessageFor(m => m.Name)
            @Html.LabelFor(m => m.Email, new {@class = "pull-left form-label" }) <i class="glyphicon glyphicon-pencil"></i>
            @Html.TextBoxFor(m => m.Email, new {@class = "form-control", placeholder = "Email"})
            @Html.ValidationMessageFor(m => m.Email)
            @Html.LabelFor(m => m.Subject, new {@class = "pull-left form-label" }) <i class="glyphicon glyphicon-pencil"></i>
            @Html.TextBoxFor(m => m.Subject, new {@class = "form-control", placeholder = "Subject"})
            @Html.ValidationMessageFor(m => m.Subject)
            @Html.LabelFor(m => m.Message, new {@class = "pull-left form-label" }) <i class="glyphicon glyphicon-envelope"></i>
            @Html.TextAreaFor(m => m.Message, new {@class = "form-control", placeholder = "Message"})
            @Html.ValidationMessageFor(m => m.Message)
            <button type="submit" class="btn btn-primary pull-left form-submit">Send</button>
        </div>
    }
}
else
{
    <p>The mail was send!</p>
}